{% extends 'EnovancePortalBundle::base_layout.html.twig' %}

{% block title %}Portal | Admin{% endblock %}

{% block css %}
<link href="{{ asset("bundles/enovanceportal/css/admin.css") }}" rel="stylesheet" type="text/css" />
{% endblock %}

{% block portal_layout %}
<div class="span12" id="admin">
    <div class="row-fluid" id="row-admin">
        <div id="a-sidebar" class="span2">
            <h2>Administration</h2>
            {{ knp_menu_render('EnovancePortalBundle:Builder:AdminMenuNavbar', {}) }}
        </div>
        <div id="a-content" class="span10">
            <div id="a-section-header">
                {% block admin_section_header %}
                {% endblock %}
                <form class="a-search">
                    <input class="a-search" id="a-content-search" placeholder="Search" />
                    <input class="a-search-button" value="Search" />
                </form>
            </div>
            <div class="a-searchable" id="admin-content">
                {% block admin_content %}
                {% endblock %}
            </div>
        </div>
    </div>
</div>
{% endblock %}
